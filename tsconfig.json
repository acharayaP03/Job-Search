{
    "extends": "@vue/tsconfig/tsconfig.json",
    "include": [
        "env.d.ts",
        "global.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "tests/**/*.test.ts",
        "node_modules/vitest/globals.d.ts"
    ],
    "exclude": [],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "types": ["node", "vite/client", "vitest/globals"]
    }
}